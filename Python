BASIC

# integer division
print(5/2) #perform normal divison ...returns 2.5
print(5//2)  #perform integer divison ...returns 2

# Exponent
print(10 ** 3)

# remainder
print(10%3)

# strings
print('neha' + 'neha')
print(3*'neha')

// result 
nehaneha
nehanehaneha

//
use a \ to let the compiler print apostrophe

name = 'Neha'
print(name[2])
// returns h
print(name[-1])
// returns the last i.e a

print(name[0:2])
// returns Ne

print(name[2:])
// returns ha

// use len() function to find the length of the string


